<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRecord">

    <!-- Title -->
    <TextView
        android:id="@+id/pagetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill Details"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="22dp" />

    <!-- Doctor Name -->
    <EditText
        android:id="@+id/docName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:minHeight="48dp"
        android:hint="Doctor Name"
        android:padding="8dp"
        android:textColor="@color/black"
        android:background="@drawable/edit_text_border"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/pagetitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Illness Description -->
    <EditText
        android:id="@+id/illnessDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:minHeight="48dp"
        android:hint="Describe Illness"
        android:padding="8dp"
        android:textColor="@color/black"
        android:background="@drawable/edit_text_border"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/docName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Additional Description -->
    <EditText
        android:id="@+id/addDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:padding="8dp"
        android:hint="Add Description"
        android:background="@drawable/edit_text_border"
        android:minLines="4"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/illnessDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Camera Button -->
    <ImageButton
        android:id="@+id/btn_camera"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/darker_gray"
        android:contentDescription="Capture Prescription"
        android:scaleType="centerInside"
        android:background="@drawable/edit_text_border"
        android:src="@drawable/baseline_camera_alt_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addDescription" />

    <!-- Upload Text -->
    <TextView
        android:id="@+id/txt_upload_pic"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text="Upload Picture"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/btn_camera"
        app:layout_constraintBottom_toBottomOf="@id/btn_camera"
        app:layout_constraintStart_toEndOf="@id/btn_camera" />

    <!-- Upload Prescription Button -->
    <Button
        android:id="@+id/btn_upload1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Upload Prescription"
        android:layout_marginTop="20dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintTop_toBottomOf="@id/btn_camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Upload Report Button -->
    <Button
        android:id="@+id/btn_upload_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Upload Other Report"
        android:layout_marginTop="20dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintTop_toBottomOf="@id/btn_upload1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create Record"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
